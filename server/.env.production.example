# Backend Environment Variables Template
# Copy this to .env and fill in your actual values

# Node Environment
NODE_ENV=production

# Server Configuration
PORT=5000
SERVER_URL=https://your-backend-domain.onrender.com
CLIENT_ORIGIN=https://your-frontend-domain.vercel.app

# Database
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/flow-focus-tool?retryWrites=true&w=majority

# JWT Configuration
JWT_SECRET=generate-a-strong-random-secret-key-here
JWT_EXPIRES_IN=7d

# Session Secret
SESSION_SECRET=generate-another-strong-random-secret-key

# OAuth - Google
GOOGLE_CLIENT_ID=your-google-oauth-client-id
GOOGLE_CLIENT_SECRET=your-google-oauth-client-secret

# OAuth - GitHub  
GITHUB_CLIENT_ID=your-github-oauth-client-id
GITHUB_CLIENT_SECRET=your-github-oauth-client-secret

# Cloudinary (for media uploads)
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# Gemini AI
GEMINI_API_KEY=your-gemini-api-key

# Cloudflare Turnstile (Optional - for bot protection)
TURNSTILE_SECRET_KEY=your-turnstile-secret-key
